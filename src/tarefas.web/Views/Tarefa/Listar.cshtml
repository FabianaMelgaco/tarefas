@model List<Tarefas.Web.Models.TarefaViewModel> 
    
<div class="list-group">
<a href="#" class="list-group-item list-group-item-action flex-column align-items-start active">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">Lista de Tarefas</h5>
      
      </a>
</div>


<form asp-action="Listar">
    <table>
        <tr>
            
            <td>Id</td>
            <td>Titulo</td>
            <td>Descrição</td>
            <td>Status</td>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Titulo</td>
                <td>@item.Descricao</td>
                <td>@item.Status</td>
                <td>

                <a
                    class="nav-link text-dark"
                    asp-area=""
                    asp-controller="Tarefa"
                    asp-action="Detalhe"
                    asp-route-id="@item.Id">Detalhar
                </a>
                    
                </td>
                <td>

                <a
                    class="nav-link text-dark"
                    asp-area=""
                    asp-controller="Tarefa"
                    asp-action="Editar"
                    asp-route-id="@item.Id">Editar
                </a>
                    
                </td>
                <td>

                <a
                    class="nav-link text-dark"
                    asp-area=""
                    asp-controller="Tarefa"
                    asp-action="Excluir"
                    asp-route-id="@item.Id">Excluir
                </a>
                    
                </td>
            </tr>
        }
    </table>
</form>
