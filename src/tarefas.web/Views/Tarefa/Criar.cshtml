@model Tarefas.Web.Models.TarefaViewModel

<form asp-action="Criar">

    <html lang="en">

    <head>
        <title>Bootstrap Example</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    </head>

    <body>
        <style>
            .custom-jumbotron {
                background-color: DodgerBlue;
                color: white;
            }
        </style>
        <div>
            <div class="jumbotron text-center custom-jumbotron">
                <h3><strong>-- INPULSE --</h3></strong>
                <p>Realizando cadastro de tarefas</p>
            </div>


            <div class="container">


                <div class="row">

                    <div class="col-sm-4">
                        <div class="d-flex justify-content-between">

                            <h3><label for="Titulo">@Html.DisplayNameFor(model => model.Titulo)</label>
                                <div class="d-flex justify-content-end">
                                    <input asp-for="Titulo" type="text" />
                                </div>
                        </div>
                        </h3>
                        <h5><span asp-validation-for="Titulo " type="text"></span></h5>
                    </div>

                    <div class="col-sm-4">
                        <div class="d-flex justify-content-between">
                            <h3><label asp-for="Descricao">@Html.DisplayNameFor(model => model.Descricao)</label>
                                <div class="d-flex justify-content-end">
                                    <input asp-for="Descricao" type="text" />
                                </div>
                        </div>
                        </h3>
                        <h5><span asp-validation-for="Descricao " type="text"></span></h5>
                    </div>

                    <div class="col-sm-4">
                        <div class="d-flex justify-content-between">
                            <h3><label for="Status">@Html.DisplayNameFor(model => model.Status)</label>
                                <div class="d-flex justify-content-end">
                                    <input asp-for="Status" type="text" />
                                </div>
                        </div>
                        </h3>
                        <h5><span asp-validation-for="Status " type="text"></span></h5>
                    </div>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-block" style="margin-top: 20px;">Clique aqui para criar a
            tarefa</button>
        <div asp-validation-summary="All" class="text-danger"></div>

    </body>

    </html>


</form>
